---
import { Icon } from "astro-icon/components";
---

<button id="theme-toggle" aria-label="Toogle Theme" data-theme="light">
    <Icon name="icon-sun" size={20} class="light"/>
    <Icon name="icon-moon" size={20} class="dark"/>
</button>

<style>
    button{
        cursor: pointer;
        display: grid;
        place-items: center;
        background-color: transparent;
        border: none;
    }
</style>

<script>
    const themeToggle = document.querySelector('#theme-toggle') as HTMLButtonElement;
</script>